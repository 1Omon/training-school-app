generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Enquiry{
  id String @id @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name  String  @db.VarChar(100)
  email  String  @db.VarChar(80)
  question String @db.VarChar()
}

model Student {
  id  String  @id @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  gender  String  @db.VarChar(8)
  school  String  @db.VarChar(255)
  contact  String  @db.VarChar(10)
  programme  String   @db.VarChar()
  level  String   @db.VarChar()
  dateOfBirth  DateTime   @db.Time()
  accepted Boolean @db.Boolean()
  batch   String @db.VarChar()
}

model Profile {
  id  String  @id @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name  String  @db.VarChar(100)
  gender  String?  @db.VarChar(8)
  email  String @unique @db.VarChar(80)
  role Role @default(USER)
  password String @db.VarChar()
}

model Facilitator {
  id  String  @id @default(uuid())
  gender  String  @db.VarChar(8)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name  String  @db.VarChar(100)
  bio  String  @db.VarChar(255)
  email  String  @db.VarChar(80)
  password String @db.VarChar()
}

model Engineer {
  id  String  @id @default(uuid())
  gender  String  @db.VarChar(8)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name  String  @db.VarChar(100)
  bio  String  @db.VarChar(255)
  email  String  @db.VarChar(80)
  skillsets  String[]  @db.VarChar(10) 
}

enum Role {
  USER
  DIRECTOR
  FACILITATOR

}